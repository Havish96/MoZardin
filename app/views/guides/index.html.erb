<%= render "shared/navbar" %>

<h1 class="title">Guides</h1>

<div class="container mb-5">
  <div class="guides-cards">

    <!-- Individual cards -->
    <% @guides.each do |guide| %>
      <div class="card">
        <%= link_to guide_path(guide) do %>
          <% if guide.image_url.nil? %>
            <div class="img" style="background-image: url(https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/1665px-No-Image-Placeholder.svg.png);"></div>
          <% else %>
            <div class="img" style="background-image: url(<%= guide.image_url %>);"></div>
          <% end %>
          <div class="content">
            <p><span><i class="fa-regular fa-clock"></i></span>
              &nbsp;&nbsp;<%= guide.date %>
            </p>
            <p><%= guide.title %></p>
            <p><%= raw guide.description.first(140) %> ...</p>
            <p>
              <span>
                <%= image_tag "https://source.unsplash.com/collection/1332302", class: "guide-avatar" %>
              </span>
                &nbsp;&nbsp;&nbsp;by <%= guide.author %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>
