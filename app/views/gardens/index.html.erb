<%= render "shared/navbar" %>
<p class="title mt-4">Plants in your Garden</h1>


<div class="article-container">
  <br>

  <div class="cards-container">
    <% @gardens.each do |garden| %>

        <div class="booking-product-card">
        <% if booking.instrument.photo.attached? %>
          <div class="img-bg" style="background-image:url('<%= cl_image_path garden.photo.key, height: 300, crop: :fill %>')";></div>
        <% else %>
          <div class="img-bg-none"><p>No Image</p></div>
        <% end %>
          <div class="product-content">
            <p><%= garden.name %></p>
            <p>Potatoes: <%= booking.start %> | <%= booking.end %></p>
            <p>Red Oak: <%= booking.user.first_name %></p>
            <p>Carrots<%= booking.instrument.price %> / Day</p>
            <p class="mt-3"><%= link_to "Leave a review", instrument_path(booking.instrument) , class: "leave-review-btn" %></p>
          </div>
        </div>

    <% end %>
  </div>
<br><br><br>

</div>
