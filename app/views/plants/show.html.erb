<%= render 'shared/footer' %>




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
      <%= simple_form_for @tag do |f| %>
        <%= f.input :age, label: 'The age of your plant', error: 'Age is mandatory, please specify' %>
        <%= f.input :location, label: 'The location of your plant', error: 'Location is mandatory, please specify' %>
      <div class="d-flex justify-content-between">
       <button type="button" class="btn btn-light" data-bs-dismiss="modal" style="width:50%">Cancel</button>
       <%= f.submit "Confirm", type:"button", class:"btn btn-normal", style:"width:50%" %>
      </div>
        <% end %>
      </div>
      </div>
      </div>
    </div>
  </div>
</div>
