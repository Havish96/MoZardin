<%= render 'shared/navbar' %>

<div class="container">
  <div class='container d-flex align-item mt-5' style='gap: 40px'>
    <%= cl_image_tag @plant.photo.key, width: 450, height: 600, crop: 'fit' %>
    <div class='p-3'>
      <h2><%= @plant.name %></h2>
      <br>
      <h4>Botanical name: <%= @plant.scientific_name %></h4>
      <br><br>
      <p style='font-size: 18px'><%= @plant.description %></p>
      <br><br><br><br>
      <%= link_to 'Add to garden', '#', class: 'btn btn-success' %>
      <%= link_to 'Go to forum', '#', class: 'btn btn-success' %>
    </div>
  </div>
  <div class='container icon-border'>
    <div class="row justify-content-evenly">
      <div class="col-4 text-center">
        <i class="fa-regular fa-cloud-sun icon"></i>
        <p class='mt-3'>Sunlight Exposure</p>
        <p> * * * *</p>
      </div>
      <div class="col-4 text-center">
        <i class="fa-regular fa-water icon"></i>
        <p class='mt-3'>Water</p>
        <p> * * * *</p>
      </div>
      <div class="col-4 text-center">
        <i class="fa-regular fa-temperature-quarter icon"></i>
        <p class='mt-3'>Temperature</p>
        <p> * * * *</p>
      </div>
    </div>
  </div>
  <h2 class='text-center mt-5'>Similar Plants</h2>
</div>

<%= render 'shared/footer' %>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"></button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered"">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
