<%= render "shared/navbar" %>

<h1 class="title">Guides</h1>

<div class="container mb-5">
  <div class="guides-cards">

    <!-- Individual cards -->
    <% @guides.each do |guide| %>
      <div class="card">
        <%= link_to guide_path(guide) do %>
          <div class="img" style="background-image: url(https://nualgiponds.com/wp-content/uploads/2014/04/water-garden-residential-pond-1080x745.jpg);"></div>
          <div class="content">
            <p><span><i class="fa-regular fa-clock"></i></span>
              &nbsp;&nbsp;<%= guide.date %>
            </p>
            <p><%= guide.title %></p>
            <p><%= guide.description %></p>
            <p>
              <span>
                <%= image_tag "https://source.unsplash.com/collection/1332302", class: "guide-avatar" %>
              </span>
                &nbsp;&nbsp;&nbsp;<%= guide.author %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>
