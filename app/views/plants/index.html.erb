<%= render "shared/navbar" %>
<h1 class="text-centred my-5 font-oleo">Wikiplant</h1>

<%= form_with url: "", method: :get, class: "d-flex search-bar mb-5" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search for plants"
  %>
<% end %>

<div class="container">
  <p class="mb-5">Categories</p>

  <div class="category-cards">
    <div class="card">
      <p>Vegetables</p>
    </div>
    <div class="card">
      <p>Herbs</p>
    </div>
    <div class="card">
      <p>Flowers</p>
    </div>
    <div class="card">
      <p>Trees</p>
    </div>
  </div>

  <p class="mt-4">All plants in library</p>

  <div class="plant-cards">
    <% @plants.each do |plant| %>
      <div class="card">

        <% if plant.photo.attached? %>
          <div class="img" style="background-image:url('<%= cl_image_path plant.photo.key %>')";></div>
        <% else %>
          <div class="img-none"><p>No Image</p></div>
        <% end %>

        <div class="text">
          <p><%= plant.name %></p>
          <p><%= plant.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
